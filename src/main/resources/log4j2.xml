<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 放入自己的路径 -->
        <!-- File name="LogFile" fileName={自己需要的路径，或者自己的桌面路径} -->
        <File name="LogFile" fileName="/home/liu/桌面/logs/app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="LogFile" />
        </Root>
    </Loggers>
</Configuration>
